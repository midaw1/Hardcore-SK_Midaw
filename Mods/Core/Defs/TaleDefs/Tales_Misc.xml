<?xml version="1.0" encoding="utf-8" ?>
<Defs>


  <!-- PawnAndItem -->

  <TaleDef>
    <defName>CraftedArt</defName>
    <taleClass>Tale_PawnAndThing</taleClass>
    <baseInterest>1</baseInterest>
    <rulePack>
      <rulesStrings>
        <li>image->[pawn_nameFull] crafting [thing_labelIndefinite] [circumstance_group]. [quality_sentence] [title_sentence] [desc_sentence_group] </li>
        <li>image->[pawn_nameFull] completing [pawn_possessive] work on [thing_labelIndefinite] [circumstance_group]. [quality_sentence] [title_sentence] [desc_sentence_group] </li>
        <li>image->[pawn_nameFull] working on [thing_labelIndefinite] [circumstance_group]. [quality_sentence] [title_sentence] [desc_sentence_group]</li>
        <li>image->[pawn_nameFull] making [thing_labelIndefinite] [circumstance_group]. [quality_sentence] [title_sentence] [desc_sentence_group] </li>
        <li>circumstance_phrase->with total concentration</li>
        <li>circumstance_phrase->with a look of satisfaction on [pawn_possessive] face</li>
        <li>circumstance_phrase->at [pawn_possessive] work bench</li>
        <li>circumstance_phrase->with great intensity</li>
        <li>desc_sentence->There are tools scattered all around.</li>
        <li>desc_sentence->[pawn_pronoun] is scratched and scarred from work injuries.</li>
        <li>desc_sentence->[pawn_pronoun] is covered in sweat.</li>
        <li>desc_sentence->The work area is highly organized, with every tool in its proper place.</li>
        <li>desc_sentence->[pawn_pronoun] is rendered in an exaggerated way to appear more powerful.</li>
        <li>desc_sentence->The size of [item_labelDefinite] is exaggerated to emphasize its importance.</li>
        <li>desc_sentence->[item_labelDefinite] has an artistic glow added to it. It seems almost angelic.</li>
        <li>desc_sentence->[pawn_nameShortDefinite] is faded into the background to emphasize [pawn_possessive] new creation.</li>
        <li>desc_sentence->A group of onlookers surround [pawn_objective].</li>
        <li>desc_sentence->A crowd cheers from the background.</li>
        <li>quality_sentence->[thing_labelDefinite] looks to be of [thing_quality] quality.</li>
        <li>quality_sentence->[thing_labelDefinite] is of [thing_quality] quality.</li>
        <li>quality_sentence->[pawn_nameShortDefinite]'s work is of [thing_quality] quality.</li>
        <li>title_sentence->[pawn_nameShortDefinite]'s title for [thing_labelDefinite] is written underneath: [thing_title].</li>
        <li>title_sentence->[thing_labelDefinite] is emblazoned with its title: [thing_title].</li>
        <li>title_sentence->The title of [thing_labelDefinite], [thing_title], hangs in the background.</li>
        <li>title_sentence-></li> <!-- needed for when we craft something that has no title -->
      </rulesStrings>
    </rulePack>
  </TaleDef>


  <TaleDef>
    <defName>StruckMineable</defName>
    <taleClass>Tale_PawnAndThing</taleClass>
    <baseInterest>1</baseInterest>
    <rulePack>
      <rulesStrings>
        <li>image->[pawn_nameFull] striking [thing_label] [circumstance_group]. [desc_sentence_group]</li>
        <li>circumstance_phrase->while mining</li>
        <li>circumstance_phrase->while digging</li>
        <li>circumstance_phrase->while tunnelling</li>
        <li>circumstance_phrase->with a look of surprise</li>
        <li>circumstance_phrase->with a satisfied expression</li>
        <li>desc_sentence->[pawn_nameShortDefinite] is wiping [pawn_possessive] brow.</li>
        <li>desc_sentence->[pawn_nameShortDefinite] is jumping for joy.</li>
        <li>desc_sentence->[pawn_nameShortDefinite] is high-fiving a friend.</li>
        <li>desc_sentence->[pawn_nameShortDefinite] is screaming with happiness.</li>
        <li>desc_sentence->[pawn_nameShortDefinite] is laughing uncontrollably.</li>
        <li>desc_sentence->[pawn_nameShortDefinite] is sweaty and dirty from work.</li>
        <li>desc_sentence->[pawn_nameShortDefinite] is sweaty and dirty from work.</li>
      </rulesStrings>
    </rulePack>
  </TaleDef>
  

  <!-- Special -->

  <TaleDef>
    <defName>KilledBy</defName>
    <taleClass>Tale_KilledBy</taleClass>
    <firstPawnSymbol>victim</firstPawnSymbol>
    <secondPawnSymbol>killer</secondPawnSymbol>
    <baseInterest>4</baseInterest>
    <rulePack>
      <rulesStrings>
        <li>image->[victim_nameFull] being killed by [killer_nameFull] [circumstance_group]. [desc_sentence_group]</li>
        <li>image->[killer_nameFull] killing [victim_nameFull] [circumstance_group]. [desc_sentence_group]</li>
        <li>image->[killer_nameFull] ending [victim_nameFull]'s life [circumstance_group]. [desc_sentence_group]</li>
        <li>image->[killer_nameFull] brutally murdering [victim_nameFull] [circumstance_group]. [desc_sentence_group]</li>
        <li>image->[victim_nameFull] being killed [circumstance_group]. [desc_sentence_group]</li>
        <li>circumstance_phrase->seemingly without remorse</li>
        <li>circumstance_phrase->with cold efficiency</li>
        <li>circumstance_phrase->with passionate rage</li>
        <li>circumstance_phrase->with quick, efficient movements</li>
        <li>circumstance_phrase->without emotion or expression</li>
        <li>circumstance_phrase->out of bleak necessity</li>
        <li>circumstance_phrase->in a cowardly, halfhearted way</li>
        <li>desc_sentence->The sun is setting behind them in a symbolic echo of the event.</li>
        <li>desc_sentence->A group of [animal]s looks on.</li>
        <li>desc_sentence->A [outlander] watches silently in the distance.</li>
        <li>desc_sentence->Blood is pooling around [victim_nameShortDefinite]'s body.</li>
        <li>desc_sentence->[victim_nameShortDefinite]'s eyes are rendered in a realistically lifeless fashion.</li>
        <li>desc_sentence->[killer_nameShortDefinite] is baring [killer_possessive] teeth.</li>
        <li>desc_sentence->[killer_nameShortDefinite] seems satisfied.</li>
        <li>desc_sentence->[killer_nameShortDefinite] looks distressed at what [killer_pronoun] is doing.</li>
        <li>desc_sentence->[killer_nameShortDefinite] looks pleased with the situation.</li>
        <li>desc_sentence->[killer_nameShortDefinite] looks triumphant.</li>
      </rulesStrings>
    </rulePack>
  </TaleDef>






</Defs>