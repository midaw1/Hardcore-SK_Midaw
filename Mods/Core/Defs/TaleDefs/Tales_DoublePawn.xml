<?xml version="1.0" encoding="utf-8" ?>
<Defs>


  <TaleDef>
    <defName>Captured</defName>
    <taleClass>Tale_DoublePawn</taleClass>
    <firstPawnSymbol>capturer</firstPawnSymbol>
    <secondPawnSymbol>prisoner</secondPawnSymbol>
    <baseInterest>4</baseInterest>
    <rulePack>
      <rulesStrings>
        <li>image->[capturer_nameFull] capturing [prisoner_nameFull] [circumstance_group]. [desc_sentence_group]</li>
        <li>image->[capturer_nameFull] tying [prisoner_nameFull]'s hands [circumstance_group]. [desc_sentence_group]</li>
        <li>image->[capturer_nameFull] smacking [prisoner_nameFull] while capturing [prisoner_objective] [circumstance_group]. [desc_sentence_group]</li>
        <li>circumstance_phrase->as [prisoner_pronoun] writhes on the ground</li>
        <li>circumstance_phrase->as [prisoner_pronoun] twists in pain</li>
        <li>circumstance_phrase->with professional efficiency</li>
        <li>circumstance_phrase->roughly and amateurishly</li>
        <li>circumstance_phrase->with obviously excessive force</li>
        <li>circumstance_phrase->with obvious pleasure</li>
        <li>circumstance_phrase->while smiling with dominance</li>
        <li>desc_sentence->[capturer_nameShortDefinite] is looking into [prisoner_nameShortDefinite]'s eyes with a sense of dominance.</li>
        <li>desc_sentence->[prisoner_nameShortDefinite] is injured and seems to be in pain.</li>
        <li>desc_sentence->[prisoner_nameShortDefinite] looks resigned to [prisoner_possessive] fate.</li>
        <li>desc_sentence->[prisoner_nameShortDefinite] is snarling with the fury of defeat.</li>
        <li>desc_sentence->[capturer_nameShortDefinite] is slapping [prisoner_nameShortDefinite] to subdue [prisoner_objective].</li>
        <li>desc_sentence->[capturer_nameShortDefinite] is twisting [prisoner_nameShortDefinite]'s ear.</li>
        <li>desc_sentence->[capturer_nameShortDefinite] is holding [prisoner_nameShortDefinite] in a joint lock.</li>
        <li>desc_sentence->[capturer_nameShortDefinite] is spitting into [prisoner_nameShortDefinite]'s face.</li>
        <li>desc_sentence->[capturer_nameShortDefinite] is laughing as tears well up in [prisoner_nameShortDefinite]'s eyes.</li>
        <li>desc_sentence->[capturer_nameShortDefinite] is kicking [prisoner_nameShortDefinite] for no obvious reason.</li>
      </rulesStrings>
    </rulePack>
  </TaleDef>

  <TaleDef>
    <defName>Recruited</defName>
    <taleClass>Tale_DoublePawn</taleClass>
    <firstPawnSymbol>recruiter</firstPawnSymbol>
    <secondPawnSymbol>joiner</secondPawnSymbol>
    <baseInterest>4</baseInterest>
    <rulePack>
      <rulesStrings>
        <li>image->[recruiter_nameFull] recruiting [joiner_nameFull] [circumstance_group]. [desc_sentence_group]</li>
        <li>image->[recruiter_nameFull] welcoming [joiner_nameFull] as [joiner_pronoun] becomes a colonist [circumstance_group]. [desc_sentence_group]</li>
        <li>image->[recruiter_nameFull] speaking convincingly to [joiner_nameFull] [circumstance_group]. [desc_sentence_group]</li>
        <li>desc_sentence->[joiner_nameShortDefinite] is nodding in understanding.</li>
        <li>desc_sentence->[joiner_nameShortDefinite] is smiling and making eye contact.</li>
        <li>desc_sentence->[joiner_nameShortDefinite] looks relieved.</li>
        <li>desc_sentence->[joiner_nameShortDefinite] looks hopeful.</li>
      </rulesStrings>
    </rulePack>
  </TaleDef>

  <TaleDef>
    <defName>Hunted</defName>
    <taleClass>Tale_DoublePawn</taleClass>
    <firstPawnSymbol>hunter</firstPawnSymbol>
    <secondPawnSymbol>prey</secondPawnSymbol>
    <baseInterest>0.1</baseInterest>
    <rulePack>
      <rulesStrings>
        <li>image->[prey_nameFull] being hunted by [hunter_nameFull] [circumstance_group]. [desc_sentence_group]</li>
        <li>image->[hunter_nameFull] stalking [prey_nameFull] from afar [circumstance_group]. [desc_sentence_group]</li>
        <li>image->[hunter_nameFull] hunting [prey_nameFull] [circumstance_group]. [desc_sentence_group]</li>
        <li>desc_sentence->[prey_nameShortDefinite] seems totally oblivious.</li>
        <li>desc_sentence->[hunter_nameShortDefinite] is gripping [hunter_possessive] weapon tightly.</li>
        <li>desc_sentence->[prey_nameShortDefinite] is looking around as though [prey_pronoun] senses that something is wrong.</li>
      </rulesStrings>
    </rulePack>
  </TaleDef>

  <TaleDef>
    <defName>DidSurgery</defName>
    <taleClass>Tale_DoublePawn</taleClass>
    <firstPawnSymbol>surgeon</firstPawnSymbol>
    <secondPawnSymbol>patient</secondPawnSymbol>
    <baseInterest>2.5</baseInterest>
    <rulePack>
      <rulesStrings>
        <li>image->[surgeon_nameFull] putting [patient_nameFull] to sleep with anesthetic [circumstance_group]. [desc_sentence_group]</li>
        <li>image->[surgeon_nameFull] elbow-deep in [patient_nameFull] during surgery [circumstance_group]. [desc_sentence_group]</li>
        <li>image->[surgeon_nameFull] slicing into [patient_nameFull] during surgery [circumstance_group]. [desc_sentence_group]</li>
        <li>desc_sentence->[surgeon_nameShortDefinite] is sweating profusely.</li>
        <li>desc_sentence->[surgeon_nameShortDefinite] looks incredibly focused on the task.</li>
        <li>desc_sentence->[surgeon_nameShortDefinite] has blood smeared on [surgeon_possessive] face.</li>
        <li>desc_sentence->[patient_nameShortDefinite] is shaking and writhing.</li>
      </rulesStrings>
    </rulePack>
  </TaleDef>
  
  
</Defs>