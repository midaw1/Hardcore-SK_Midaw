    <pawnsPlural>insectoid</pawnsPlural>
    <requiredCountAtGameStart>1</requiredCountAtGameStart>
    <fixedName>a insectoid hive</fixedName>
    <raidCommonality>40</raidCommonality>
    <humanlikeFaction>false</humanlikeFaction>
    <hidden>true</hidden>
    <canFlee>false</canFlee>
    <techLevel>Neolithic</techLevel>
    <startingGoodwill>
      <min>-100</min>
      <max>-100</max>
    </startingGoodwill>
    <mustStartOneEnemy>true</mustStartOneEnemy>
    <naturalColonyGoodwill>
      <min>-100</min>
      <max>-100</max>
    </naturalColonyGoodwill>
    <pawnGroupMakers>
      <li>
        <options>
          <li>
            <selectionWeight>100</selectionWeight>
            <kind>Antis</kind>
          </li>
          <li>
            <selectionWeight>25</selectionWeight>
            <kind>Gnawler</kind>
          </li>
        </options>
      </li>
    </pawnGroupMakers>
    <homeIconPath>World/FactionHomes/DefaultHome</homeIconPath>
    <homeIconColor>(250,250,150)</homeIconColor>
  </FactionDef>



