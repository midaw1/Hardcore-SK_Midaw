    <!-- Weapons -->
  <RecipeDef>
    <defName>ConvertWeapon</defName>
    <label>convert weapon</label>
    <description>Convert a weapon into inorganic matter.</description>
    <jobString>Converting.</jobString>
    <workAmount>1200</workAmount>
		<workSpeedStat>ElectronicCraftingSpeed</workSpeedStat>
		<effectWorking>Smelt</effectWorking>
    <soundWorking>Recipe_Smelt</soundWorking>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>Weapons</li>
          </categories>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>Weapons</li>
      </categories>
    </fixedIngredientFilter>
    <products>
      <Matter>8</Matter>
    </products>
  </RecipeDef>
  
