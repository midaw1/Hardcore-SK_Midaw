<?xml version="1.0" encoding="utf-8" ?>
<ThingDefs>

  <ThingDef Name="ApparelBase" Abstract="True">
    <thingClass>Apparel</thingClass>
    <category>Item</category>
    <selectable>True</selectable>
    <pathCost>10</pathCost>
    <useHitPoints>True</useHitPoints>
    <graphicData>
      <onGroundRandomRotateAngle>35</onGroundRandomRotateAngle>
    </graphicData>
    <drawGUIOverlay>true</drawGUIOverlay>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <DeteriorationRate>3</DeteriorationRate>
      <SellPriceFactor>0.5</SellPriceFactor>
    </statBases>
    <thingCategories>
      <li>Apparellocategory</li>
    </thingCategories>
    <techLevel>Midworld</techLevel>
    <altitudeLayer>Item</altitudeLayer>
    <alwaysHaulable>True</alwaysHaulable>
    <tickerType>Never</tickerType>
    <comps>
      <li>
        <compClass>CompForbiddable</compClass>
      </li>
      <li>
        <compClass>CompColorable</compClass>
      </li>
      <li>
        <compClass>CompQuality</compClass>
      </li>
    </comps>
  </ThingDef>


  <ThingDef ParentName="ApparelBase">
    <defName>Apparello_Urbulence</defName>
    <label>Urban shirt</label>
    <description>All the punks felt lucky wearing these.</description>
    <graphicData>
      <texPath>Apparel/UrbzMid/Urb</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costStuffCount>50</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
    </stuffCategories>
    <statBases>
      <ArmorRating_Blunt>0.02</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.02</ArmorRating_Sharp>
    </statBases>
    <equippedStatOffsets>
      <MentalBreakThreshold>-0.03</MentalBreakThreshold>
    </equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
      </bodyPartGroups>
      <worngraphicPath>Apparel/UrbzMid/Urb</worngraphicPath>
      <layers>
        <li>OnSkin</li>
      </layers>
      <commonality>1</commonality>
      <tags>
        <li>Outlander</li>
        <li>Spacer</li>
	<li>BrotherhoodScout</li>
	<li>SectarianScout</li>
	<li>SyndicateScout</li>
	<li>OrionScout</li>
	<li>NightbladesScout</li>
	<li>PredatorsScout</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
    </apparel>
		<colorGenerator Class="ColorGenerator_Options">
			<options>
				<li>
					<weight>10</weight>
					<only>RGBA(0,0.70,1,1)</only>
				</li>
				<li>
					<weight>10</weight>
					<only>RGBA(0.60,0,0.60,1)</only>
				</li>
				<li>
					<weight>10</weight>
					<only>RGBA(0.50,1,0,1)</only>
				</li>
				<li>
					<weight>5</weight>
					<max>RGBA(1,1,1,1)</max>
					<min>RGBA(0.30,0.30,0.30,1)</min>
				</li>	
				<li>
					<weight>20</weight>
					<only>RGBA(0.33,0.33,0.33,1)</only>
				</li>
				<li>
					<weight>20</weight>
					<only>RGBA(0.65,0.65,0.65,1)</only>
				</li>
				<li>
					<weight>20</weight>
					<only>RGBA(0.9,0.9,0.9,1)</only>
				</li>	
				<li>
					<weight>20</weight>
					<only>RGBA(0,0.6,1,1)</only>
				</li>		
			</options>
		</colorGenerator>
  </ThingDef>



